{
  "name": "mock-api",
  "version": "0.1.0",
  "description": "Podium Mock API Service",
  "private": true,
  "contributors": [
    {
      "name": "Ash Kamel",
      "email": "ash.kamel@soul-cycle.com"
    }
  ],
  "main": "server.js",
  "engines": {
    "node": "10.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://soul-cycle.com"
  },
  "bugs": {
    "url": "https://soul-cycle.com"
  },
  "homepage": "https://soul-cycle.com",
  "scripts": {
    "cover": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "clean": "rm -rf dist",
    "lint": "eslint --format codeframe .",
    "lint-fix": "eslint --fix --format codeframe .",
    "start-dev": "pm2-docker start pm2.config.json",
    "test": "mocha test",
    "build": "npm run clean && babel src --out-dir ./dist --source-maps",
    "serve": "node ./dist/server.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "commander": "^2.19.0",
    "deep-extend": "^0.6.0",
    "drakov": "github:ajkamel/drakov#exports-requestutils",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "path": "^0.12.7",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "codecov": "^3.7.1",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.2",
    "mocha": "^6.0.0-1",
    "moxios": "^0.4.0",
    "nyc": "^13.1.0",
    "pm2": "^3.2.4",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "mocha": {
    "require": "@babel/register",
    "recursive": true
  },
  "eslintIgnore": [
    "test/**",
    "dist/**",
    "node_modules/**"
  ],
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "parser": "babel-eslint",
    "rules": {
      "max-len": [
        "error",
        120,
        4
      ],
      "arrow-body-style": 0,
      "arrow-parens": 0,
      "class-methods-use-this": 0,
      "consistent-return": 0,
      "default-case": 0,
      "func-names": 0,
      "global-require": 0,
      "import/no-dynamic-require": 0,
      "import/no-mutable-exports": 0,
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "new-cap": 0,
      "no-confusing-arrow": 0,
      "no-else-return": 0,
      "no-loop-func": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-unused-expressions": 0,
      "prefer-template": 0,
      "quote-props": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    }
  }
}
